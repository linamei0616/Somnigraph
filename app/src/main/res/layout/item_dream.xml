<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_card">

<TextView
android:id="@+id/dream_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/anta"
android:textSize="20sp"
android:textStyle="bold"
android:textColor="@color/black"
android:text="Dream Title" />

<TextView
android:id="@+id/dream_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/poppins_semi_bold"
android:textSize="14sp"
android:textColor="#888888"
android:text="Dream_Date" />

<TextView
android:id="@+id/dream_description"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/poppins_semi_bold"
android:textSize="16sp"
android:textColor="@color/black"
android:text="Dream Description"
android:maxLines="1"
    android:ellipsize="end"
    android:lines="1" />

<TextView
android:id="@+id/dream_tags"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/poppins_semi_bold"
android:textSize="14sp"
android:textColor="#666666"
android:text="Tags"
android:maxLines="1"
    android:ellipsize="end" />
    </LinearLayout>
